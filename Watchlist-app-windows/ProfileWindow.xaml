<Page x:Class="Watchlist_app_windows.ProfileWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
	Title="ProfileWindow">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Source/364622-1024x768.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="290,523,0,0" TextWrapping="Wrap" Text="Здесь будет информация о профиле" VerticalAlignment="Top" Height="67" Width="470" FontSize="24" Foreground="#FFECB90E"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="79,87,0,0" VerticalAlignment="Top" Width="103" Height="37" Click="GoToMain">
            <Button.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFE81010" Offset="1"/>
                </LinearGradientBrush>
            </Button.OpacityMask>
        </Button>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="79,147,0,0" VerticalAlignment="Top" Width="103" Height="40"/>

    </Grid>
</Page>
